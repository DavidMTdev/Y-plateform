{% extends 'base.html.twig' %}
{% block title %}- Liste Membres {% endblock %}

{% block content %}

<h4>Panel Admin</h4>
<a href="{{ path('dashboardAdmin') }}">Dashboard</a>
<h6>Utilisateurs</h6>
<a href="{{ path('userList') }}">Utilisateurs</a><br>
<a href="{{ path('memberList') }}">Membres</a>
<h6>Demandes</h6>
<a href="">Ajout de jeu</a><br>

<h1>Tableau Membres</h1>
<br><br>


<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nom</th>
      <th scope="col">Email</th>
      <th scope="col">Date de naissance</th>
      <th scope="col">Date de crÃ©ation</th>
      <th scope="col">Modifier / Supprimer</th>
    </tr>
  </thead>
  <tbody>
    {% for member in members %}
    <tr>
      <th scope="row">{{ member.user.id }}</th>
      <td>{{ member.user.username}} {{ member.user.lastname}}</td>
      <td>{{ member.user.mail }}</td>
      <td>{{ member.user.age.date|date("m/d/Y") }}</td>
      <td>{{ member.user.dateU.date|date("m/d/Y") }}</td>
      <td><a href="{{ path('dashboardAdminMember', {id : member.user.id}) }}">Voir dashboard</a></td>
    </tr>
    {% endfor %}
  </tbody> 
</table>
<div class="navigation">
  {{ knp_pagination_render(members) }}
</div> 

{% endblock %}