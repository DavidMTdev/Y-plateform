{% extends 'base.html.twig' %}
{% block title %}- Liste Membres {% endblock %}

{% block content %}

<h4>Panel Admin</h4>
<a href="{{ path('dashboardAdmin') }}">Dashboard</a>
<h6>Utilisateurs</h6>
<a href="{{ path('userList') }}">Utilisateurs</a><br>
<a href="{{ path('memberList') }}">Membres</a>
<h6>Demandes</h6>
<a href="{{ path('ajoutJeux') }}">Ajout de jeu</a><br>

<h1>Tableau Membres</h1>
<br><br>


<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nom</th>
      <th scope="col">Email</th>
      <th scope="col">Date de naissance</th>
      <th scope="col">Date de crÃ©ation</th>
      <th scope="col">Modifier / Supprimer</th>
    </tr>
  </thead>
  <tbody>
    {% for member in members %}
    <tr>
      <th scope="row">{{ member.user.id }}</th>
      <td>{{ member.user.username}} {{ member.user.lastname}}</td>
      <td>{{ member.user.mail }}</td>
      <td>{{ member.user.age.date|date("m/d/Y") }}</td>
      <td>{{ member.user.dateU.date|date("m/d/Y") }}</td>
      <td>
        <a href="{{ path('dashboardAdminMember', {id : member.user.id}) }}"><span class="iconify" data-inline="false" data-icon="bx:bxs-edit-alt" style="color: #2058E9; font-size: 30px;"></span></a>
        {% if member.user.isActiveU == true %}
          <a href="{{ path('userState', {id : member.user.id}) }}"><span class="iconify" data-inline="false" data-icon="mdi:delete-forever-outline" style="color: #FF3838; font-size: 30px;"></span></a>
        {% endif %}
        {% if member.user.isActiveU == false %}
          <a href="{{ path('userState', {id : member.user.id}) }}"><span class="iconify" data-inline="false" data-icon="emojione:counterclockwise-arrows-button" style="font-size: 30px;"></span></a>
        {% endif %}
      </td>
    </tr>
    {% endfor %}
  </tbody> 
</table>
<div class="navigation">
  {{ knp_pagination_render(members) }}
</div> 

{% endblock %}